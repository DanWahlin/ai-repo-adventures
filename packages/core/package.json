{
  "name": "@codewithdan/ai-repo-adventures-core",
  "version": "1.10.1",
  "description": "Core functionality for AI Repo Adventures",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adventure": {
      "types": "./dist/adventure/index.d.ts",
      "import": "./dist/adventure/index.js"
    },
    "./analyzer": {
      "types": "./dist/analyzer/index.d.ts",
      "import": "./dist/analyzer/index.js"
    },
    "./llm": {
      "types": "./dist/llm/index.d.ts",
      "import": "./dist/llm/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "adventure": [
        "./dist/adventure/index.d.ts"
      ],
      "analyzer": [
        "./dist/analyzer/index.d.ts"
      ],
      "llm": [
        "./dist/llm/index.d.ts"
      ],
      "shared": [
        "./dist/shared/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/prompts dist/",
    "clean": "rm -rf dist",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.0",
    "linguist-js": "^2.9.2",
    "marked": "^16.3.0",
    "openai": "^6.1.0",
    "repomix": "^1.6.1",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.37.0",
    "lerna": "^9.0.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "llm",
    "code-analysis",
    "adventure",
    "core"
  ],
  "author": "Dan Wahlin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danwahlin/ai-repo-adventures.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/danwahlin/ai-repo-adventures#readme",
  "bugs": {
    "url": "https://github.com/danwahlin/ai-repo-adventures/issues"
  }
}
