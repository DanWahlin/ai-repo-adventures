{
  "name": "@codewithdan/ai-repo-adventures-generator",
  "version": "1.9.2",
  "description": "Generate beautiful HTML adventure websites from your codebase",
  "type": "module",
  "bin": {
    "repo-adventures": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/cli/templates dist/cli/ && cp -r src/cli/assets dist/cli/ && cp -r src/cli/themes dist/cli/",
    "clean": "rm -rf dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "code-exploration",
    "documentation",
    "html-generator",
    "adventure",
    "storytelling",
    "ai",
    "llm",
    "code-analysis",
    "developer-tools"
  ],
  "author": "Dan Wahlin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danwahlin/ai-repo-adventures.git",
    "directory": "packages/generator"
  },
  "homepage": "https://github.com/danwahlin/ai-repo-adventures#readme",
  "bugs": {
    "url": "https://github.com/danwahlin/ai-repo-adventures/issues"
  },
  "dependencies": {
    "@codewithdan/ai-repo-adventures-core": "^1.9.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "http-server": "^14.1.1",
    "marked": "^16.3.0",
    "open": "^10.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
